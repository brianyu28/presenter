{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "exactOptionalPropertyTypes": true,
    "declaration": true,
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "target": "es5"
  },
  "exclude": [
    "./examples",
    "./packages",
    "./dist",
    "./eslint.config.mts",
    "./jest.config.js",
    "./vite.config.ts",
    "./vite.config.export.ts"
  ]
}
